<article class="recipes-list">
  <h2 class="recipes-title">My Recipes</h2>

  <div class="recipes-grid">
    <% @list_of_recipes.each do |recipe| %>
      <a href="/recipes/<%= recipe.id %>" class="recipe-card">
        <h3><%= recipe.title %></h3>
        <p class="recipe-desc"><%= truncate(recipe.description, length: 80) %></p>
        <span class="recipe-link">View â†’</span>
      </a>
    <% end %>
  </div>
</article>

